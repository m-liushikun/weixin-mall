 .modal-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  /* overflow: hidden; */
  }

.modal-body{
  position:relative;
  }
.modal-title{
    border-bottom: 1px solid #e9eaec;
    width: 100%;
    height: 50px;
    line-height: 50px;
    font-size: 14px;
    color: #1c2438;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-left: 20px;
    box-sizing: border-box;
}
