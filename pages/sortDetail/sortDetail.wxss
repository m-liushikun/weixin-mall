/* pages/sortDetail/sortDetail.wxss */
.sortDetail{
  background-color: #f6f6f6;
}
swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.xiangqiang{
      background: #fff;
    padding: 20px;
   
}
.xiangqiang .modelName{
  margin-bottom: 20px;
  line-height: 25px;
  color: #333;
   font-size: 16px;
}
.xiangqiang .price{
  color: #0099ff;
  font-size: 16px;
  font-weight: 700;
}
.choose{
    margin-top: 10px;
    margin-bottom: 10px;
    background: #fff;
    padding: 15px 15px;
    height: 20px;
    font-size: 16px;
}
.choose .bigchoose{
  font-weight: bold;
  font-size: 16px;
}
.foot {
    background: #fff;
    border-top: 1px solid #eee;
    position: fixed;
    height: 50px;
    z-index: 31;
    bottom: 0;
    left: 0;
    width: 100%;
    text-align: center;
}
.foot button{
  float: right;
  height: 50px;
  line-height: 50px;
}
.foot .jrgwc{
    background: #0099ff;
    color: #fff;
    border: 0 none;
    padding-left: 30px;
    padding-right: 30px;
    cursor: pointer;
    border-radius: 0px;
}
.foot .cart{
   
    background: #fff;
    border-radius: 0px;
    color:#333;
    padding-left: 30px;
    padding-right: 30px;
    height: 40px;
    border: none!important;
    
}
.foot .cart::after{
  border: none;
}
.chooseModal{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  z-index: 100
}
.chooseModal .modalClose{
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: #fff;
  border: none;
}
.chooseModal .modalClose::after{
  border: none;
}
.chooseModal .modal-body{
  position: relative;
  margin: 100px 20px;
  width: calc(100% - 40px);
}
.chooseModal .modalheader{
    position: relative;
    background-color: #fff;
    border: 0;
    border-radius: 6px;
    border-bottom-right-radius: 0px;
    border-bottom-left-radius: 0px;
    background-clip: padding-box;
    border-bottom: 1px solid #e9eaec;
    padding: 14px 16px;
}
.chooseModal .xiajia{

    min-height: 65px;
    font-size: 16px;
    display: flex;
    align-items: center;
}
.chooseModal .modalAttr{
    padding: 16px;
    font-size: 12px;
    background-color: #fff;
    overflow: hidden;
}
.chooseModal .modalNum{
      padding: 16px;
    font-size: 12px;
    background-color: #fff;
}
.chooseModal .catalogAttrValue{
  margin-bottom: 10px;
}
.chooseModal .modelAttrValue{
  margin-bottom: 10px;
      border: 1px solid #ccc;
    float: left;
    padding: 6px 10px;
    margin-right: 15px;
    color: #222;
    cursor: pointer;

}
.chooseModal .min, .chooseModal .add{
  display: inline-block;
    color: #333;
    font-weight: bold;
    cursor: pointer;
    margin-right: 5px;
    font-size: 14px;
    margin-left: 3px;
    background-color: #fff;
    border: none;
}
.chooseModal .min::after, .chooseModal .add::after{
  border: none;
}
.chooseModal .text-box{
    font-size: 14px;
    width: 100px;
    text-align: center;
    background: #f5f5f5;
    border: 0 none;
    height: 36px;
    line-height: 36px;
    color: #333;
    display: inline-block;
}
.modalFooter button{
  border-radius: 0px;
}
.modalFooter button::after{
  border-radius: 0px;
}
.chooseModal .seleted{
    color: #0099ff;
    border-color: #0099ff;
}
.chooseModal .choosespImg{
      width: 72px;
    height: 72px;
    background: #fff;
    position: absolute;
    top: -25px;
}
.chooseModal .small-xq{
  padding-left: 72px;
  font-size: 16px;
}
.chooseModal .choosespPrice{
  margin-bottom: 5px;
    color: #0099ff;
    display: block;
    font-size: 14px;
}
.chooseModal .choosespkucun{
      display: block;
    color: red;
    font-style: normal;
    margin-top: 5px;
    font-size: 14px;
}
.nav{width:100%;height:100rpx;display:flex;flex-direction:row;}
.default{line-height:100rpx;text-align:center;flex:1;border-right:1px solid none;color:#000;font-weight:bold;font-size:28rpx;}
.red{line-height:100rpx;text-align:center;color:#0099ff;flex:1;border-right:1px solid none;font-weight:bold;font-size:28rpx;}
.show{display:block;text-align:center;line-height:200rpx;}
.hidden{display:none;text-align:center;line-height:200px;}
.sortDetail .productImg{
  width:100%;
  vertical-align:top;
}
.sortDetail .productDesc{
  font-size: 16px;
  text-align: left;
  padding-left: 20px;
  height: 35px;
  line-height: 35px;
  background-color: #fff;
}